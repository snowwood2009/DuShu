<!DOCTYPE HTML>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/login.css">
    <script src="/js/jquery-1.9.1.min.js"></script>
    <script src="/js/login.js"></script>
  </head>
  <body>
    <h3>登录</h3>
    <div>
      <span id="usePwd">密码登录</span><span id="usePhone">手机登录</span>
    </div>
    <div id="divPwd">
      <div>
        <span>用户名</span>
        <span><input type='text' id='username' />
      </div>
      <div>
        <span>密码</span>
        <span><input type='password' id='password' />
      </div>
      <div>
        <input type="button" id="btnPwdLogin" value="登录" />
      </div>
    </div>
    <div id="divPhone">
      <div>
  	    <span>校验码：</span>
  			<input type="text" id="captchaCode" />
  			<img id="captchaImage" />
        <input type="hidden" id="captchaToken" />
  		</div>
      <div>
  			<span>手机号：</span>
  			<input type="text" id="mobilePhone" value="15038112277" />
  			<input type="button" id="requestSmsCode" value="获取验证码" />
  		</div>
      <div>
  			<span>验证码：</span>
  			<input type="text" id="smsCode" value="903756" />
  			<input type="button" id="btnPhoneLogin" value="登录" />
  		</div>
    </div>
  </body>
</html>
