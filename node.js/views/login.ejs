<!DOCTYPE HTML>
<html>
	<head>
		<link rel="stylesheet" href="/stylesheets/style.css">
		<link rel="stylesheet" href="/stylesheets/login.css">
		<script src="/js/jquery-1.9.1.min.js"></script>
		<script src="/js/login.js"></script>
	</head>
	<body>
		<div class='page-border'>
			<div class='page-title'>登录</div>
				<div class='page-content'>
				<div class='login-type'>
					<div class='login-type-item' id="usePwd">密码登录</div>
					<div class='login-type-item' id="usePhone">手机登录</div>
				</div>
				<div id="divPwd">
					<div>
						<span>用户名</span>
						<input type='text' id='username' />
					</div>
					<div>
						<span>密码</span>
						<input type='password' id='password' />
					</div>
					<div>
						<input type="button" id="btnPwdLogin" value="登录" />
					</div>
				</div>
				<div id="divPhone">
					<div>
						<span>校验码：</span><input type="text" id="captchaCode" />
						<img id="captchaImage" />
						<input type="hidden" id="captchaToken" />
					</div>
					<div>
						<span>手机号：</span>
						<input type="text" id="mobilePhone" value="15038112277" />
						<input type="button" id="requestSmsCode" value="获取验证码" />
					</div>
					<div>
						<span>验证码：</span>
						<input type="text" id="smsCode" value="903756" />
						<input type="button" id="btnPhoneLogin" value="登录" />
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
